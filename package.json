{
  "name": "react-scripts-reporter",
  "version": "0.3.1",
  "description": "A reporter for React-Scripts.",
  "main": "lib/index.js",
  "dependencies": {
    "@types/figlet": "^1.2.0",
    "@types/gradient-string": "^1.1.0",
    "boxen": "^4.1.0",
    "chalk": "^2.4.2",
    "figlet": "^1.2.3",
    "gradient-string": "^1.2.0",
    "progress": "^2.0.3"
  },
  "devDependencies": {
    "@types/chalk": "2.2.0",
    "@types/jest": "22.2.3",
    "@types/node": "8.10.49",
    "browserify": "16.2.3",
    "coveralls": "^3.0.4",
    "jest": "24.8.0",
    "jest-environment-jsdom": "24.8.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^14.1.1",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0",
    "tslint": "5.17.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.5.2"
  },
  "scripts": {
    "clean": "rimraf lib && rimraf coverage",
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "prebuild": "yarn clean && yarn lint && echo Using TypeScript && tsc --version",
    "build": "tsc --pretty && browserify lib/render/view.js -o lib/render/view.js",
    "dev": "yarn build && jest",
    "test": "jest --reporters=default --coverage",
    "coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexlee-dev/react-scripts-reporter.git"
  },
  "keywords": [
    "react",
    "react-scripts",
    "test",
    "reporter",
    "jest"
  ],
  "files": [
    "lib",
    "LICENSE",
    "README.md"
  ],
  "author": "Alex Lee <alex@alexlee.dev>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexlee-dev/react-scripts-reporter/issues"
  },
  "homepage": "https://github.com/alexlee-dev/react-scripts-reporter#readme",
  "jest": {
    "testURL": "http://localhost",
    "modulePathIgnorePatterns": [
      "__tests__/__snapshots__/"
    ],
    "transform": {
      ".(ts)": "ts-jest"
    },
    "testRegex": "__tests__.*\\.(spec|test)\\.ts$",
    "watchPathIgnorePatterns": [
      ".*jest-stare.*\\.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testEnvironment": "jsdom",
    "reporters": [
      "<rootDir>/lib/index.js"
    ]
  }
}
