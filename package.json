{
  "name": "react-scripts-reporter",
  "version": "0.7.1",
  "description": "A reporter for React-Scripts.",
  "main": "lib/index.js",
  "bin": {
    "react-scripts-reporter": "lib/cli.js"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "boxen": "^4.1.0",
    "chalk": "^2.4.2",
    "express": "^4.17.1",
    "figlet": "^1.2.3",
    "gradient-string": "^1.2.0",
    "progress": "^2.0.3",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@babel/core": "^7.5.0",
    "@babel/preset-env": "^7.5.0",
    "@babel/preset-react": "^7.0.0",
    "@types/chalk": "2.2.0",
    "@types/express": "^4.17.0",
    "@types/figlet": "^1.2.0",
    "@types/gradient-string": "^1.1.0",
    "@types/jest": "22.2.3",
    "@types/node": "8.10.49",
    "@types/progress": "^2.0.3",
    "babel-loader": "^8.0.6",
    "coveralls": "^3.0.4",
    "jest": "24.7.1",
    "jest-environment-jsdom": "24.8.0",
    "rimraf": "2.6.3",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0",
    "tslint": "5.17.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.5.2",
    "webpack": "^4.35.2",
    "webpack-cli": "^3.3.5"
  },
  "scripts": {
    "clean": "rimraf lib && rimraf coverage && rimraf report",
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "prebuild": "yarn clean && yarn lint",
    "build": "tsc --pretty",
    "postbuild": "yarn build-renderer",
    "build-renderer": "webpack --mode production --display-error-details",
    "postbuild-renderer": "mkdir lib/renderer && cp src/renderer/index.html lib/renderer && cp src/renderer/main.js lib/renderer",
    "dev": "yarn build && jest",
    "test": "jest --reporters=default --coverage",
    "coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "build-cli": "yarn dev && chmod +x lib/cli.js && react-scripts-reporter --serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexlee-dev/react-scripts-reporter.git"
  },
  "keywords": [
    "react",
    "react-scripts",
    "test",
    "reporter",
    "jest"
  ],
  "files": [
    "lib",
    "LICENSE",
    "README.md"
  ],
  "author": "Alex Lee <alex@alexlee.dev>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexlee-dev/react-scripts-reporter/issues"
  },
  "homepage": "https://github.com/alexlee-dev/react-scripts-reporter#readme",
  "jest": {
    "testURL": "http://localhost",
    "modulePathIgnorePatterns": [
      "__tests__/__snapshots__/"
    ],
    "testRegex": "__tests__.*\\.(spec|test)\\.js$",
    "testEnvironment": "jsdom",
    "reporters": [
      "<rootDir>/lib/index.js"
    ]
  }
}
